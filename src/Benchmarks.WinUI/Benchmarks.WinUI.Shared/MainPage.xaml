<Page
    x:Class="Benchmarks.WinUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="15, 15, 0, 0" Spacing="15">
            <RadioButton Content="BenchmarkDotNet"
                         GroupName="BenchmarkType"
                         Checked="HandleCheck" />

            <RadioButton Content="Async UI Benchmarks"
                         GroupName="BenchmarkType"
                         Checked="HandleCheck" />
        </StackPanel>

        <ContentControl x:Name="BenchmarkControl" />
    </StackPanel>
</Page>
